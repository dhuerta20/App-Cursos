<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Cursos.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Registro" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>

            </Frame>

            <Label Text="Email" />
            <Entry Placeholder="example@gmail.com" x:Name="txtEmailReg" Keyboard="Email" />
            <Label Text="Contraseña" />
            <Entry Placeholder="********" x:Name="txtContraReg" IsPassword="True" />
            <Label Text="Nombre Completo" />
            <Entry Placeholder="Nombre Completo" x:Name="txtNombreReg" />
            <Label Text="Edad" />
            <Entry Placeholder="Edad" x:Name="txtEdadReg" Keyboard="Numeric" />
            <Button Text="Registrar" Clicked="btn_Registrar" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>